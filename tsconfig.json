{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2015",
    "outDir": "./lib/",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "paths": {
      "@components/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src"
  ],
  "exclude":[
    "lib",
    "node_modules",
  ],
  "compileOnSave": false
}